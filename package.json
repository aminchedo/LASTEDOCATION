{
  "name": "llm-monitoring-app",
  "version": "2.0.0",
  "type": "module",
  "description": "LLM Monitoring UI - Enhanced monitoring dashboard for Persian chat application",
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:backend": "cd BACKEND && npm run dev",
