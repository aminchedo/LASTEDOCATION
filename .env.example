# =====================================================
# MODEL TRAINING PROJECT - ENVIRONMENT CONFIGURATION
# =====================================================

# =====================================================
# BACKEND CONFIGURATION
# =====================================================

# Node Environment
NODE_ENV=development
PORT=3001

# =====================================================
# SECURITY (REQUIRED)
# =====================================================

# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -base64 32
JWT_SECRET=change-me-in-production-use-long-random-string-here

# JWT Token Expiration
JWT_EXPIRES_IN=7d

# =====================================================
# CORS SETTINGS
# =====================================================

# Allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:8080

# =====================================================
# LOGGING
# =====================================================

LOG_LEVEL=info
LOG_DIR=logs

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================

# API Base URL for frontend
VITE_API_BASE_URL=http://localhost:3001

# =====================================================
# MACHINE LEARNING CONFIGURATION
# =====================================================

# Model Configuration
MODEL_PATH=./models/persian-chat
MODEL_NAME=HooshvareLab/bert-fa-base-uncased
MAX_LENGTH=512
TEMPERATURE=0.7

# Training Defaults
DEFAULT_EPOCHS=3
DEFAULT_BATCH_SIZE=4
DEFAULT_LEARNING_RATE=0.00005

# =====================================================
# HUGGINGFACE INTEGRATION (OPTIONAL)
# =====================================================

# Get your token at: https://huggingface.co/settings/tokens
# Required for downloading models and datasets
# HUGGINGFACE_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =====================================================
# GOOGLE SERVICES (OPTIONAL)
# =====================================================

# Google Drive Integration
# Required for model backup/restore to Google Drive
# GOOGLE_SERVICE_ACCOUNT_KEY=/path/to/credentials.json
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret
# GOOGLE_REFRESH_TOKEN=your-refresh-token

# Google Custom Search (for data collection)
# GOOGLE_CUSTOM_SEARCH_KEY=your-api-key
# GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your-search-engine-id

# =====================================================
# DATASET CONFIGURATION
# =====================================================

# Dataset Paths
DATASET_DIR=./data/datasets
UPLOAD_DIR=./uploads

# Hugging Face Datasets (comma-separated)
DATASET_TRAIN_URLS=ParsBERT-Fa-Sentiment-Twitter,PersianMind-v1.0
DATASET_TEST_SPLIT=validation

# Dataset Options
HAMSHAHRI_ENABLED=false
MAX_DATASET_SIZE_MB=100

# =====================================================
# SPEECH SERVICES (OPTIONAL)
# =====================================================

# Speech-to-Text (STT) Configuration
# Options: deepgram, whisper-local, azure
# STT_PROVIDER=whisper-local
# STT_API_ENDPOINT=https://api.deepgram.com/v1/listen
# STT_API_KEY=your-deepgram-api-key
# STT_LANGUAGE=fa
# STT_MODEL=small

# Text-to-Speech (TTS) Configuration
# Options: elevenlabs, azure, google, local
# TTS_PROVIDER=local
# TTS_API_ENDPOINT=https://api.elevenlabs.io/v1/text-to-speech
# TTS_API_KEY=your-elevenlabs-api-key
# TTS_VOICE_ID=your-voice-id
# TTS_LANGUAGE=fa

# =====================================================
# SEARCH API (OPTIONAL)
# =====================================================

# Search Service Configuration
# SEARCH_API_ENDPOINT=https://api.tavily.com/search
# SEARCH_API_KEY=your-tavily-api-key
# SEARCH_MAX_RESULTS=3

# =====================================================
# CUSTOM API (OPTIONAL)
# =====================================================

# Custom API Integration
# CUSTOM_API_ENDPOINT=https://your-api.com
# CUSTOM_API_KEY=your-api-key

# =====================================================
# DATABASE (OPTIONAL)
# =====================================================

# Currently using SQLite (no configuration needed)
# For PostgreSQL/MySQL in future:
# DATABASE_URL=postgresql://user:pass@localhost:5432/ai_training

# =====================================================
# MONITORING & ANALYTICS (OPTIONAL)
# =====================================================

# Sentry Error Tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Google Analytics
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# =====================================================
# PERFORMANCE & OPTIMIZATION
# =====================================================

# Training Performance
USE_GPU=false
GPU_DEVICE_ID=0
NUM_WORKERS=4

# Caching
ENABLE_CACHE=true
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# DEVELOPMENT OPTIONS
# =====================================================

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Auto-reload on changes
HOT_RELOAD=true

# Mock Services (for testing without Python dependencies)
USE_MOCK_TRAINING=false
USE_MOCK_VOICE=false

# =====================================================
# PRODUCTION OPTIONS
# =====================================================

# Production Settings (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=error
# CORS_ORIGIN=https://yourdomain.com
# USE_GPU=true
# ENABLE_CACHE=true
# RATE_LIMIT_MAX_REQUESTS=50

# =====================================================
# NOTES
# =====================================================

# 1. REQUIRED: Set JWT_SECRET to a strong random string
# 2. OPTIONAL: Set HUGGINGFACE_TOKEN for model downloads
# 3. OPTIONAL: Configure voice services for STT/TTS
# 4. OPTIONAL: Set up Google Drive for model backups
# 5. Change CORS_ORIGIN in production to your domain
# 6. Use environment-specific .env files (.env.production, .env.staging)

# =====================================================
# END OF CONFIGURATION
# =====================================================
