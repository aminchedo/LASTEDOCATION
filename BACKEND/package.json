{
  "name": "persian-chat-backend",
  "version": "1.0.0",
  "description": "TypeScript-only Express backend for Persian Chat",
  "main": "dist/src/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/server.js",
    "start:prod": "npm run build && node dist/src/server.js",
    "dev": "ts-node src/server.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "verify:db": "ts-node scripts/verify-database.ts",
    "verify:api": "ts-node scripts/verify-api.ts",
    "verify:ts": "ts-node scripts/verify-typescript.ts",
    "verify:build": "ts-node scripts/verify-build.ts",
    "verify:all": "npm run verify:db && npm run verify:ts && npm run verify:build"
  },
  "keywords": [
    "persian",
    "chat",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tensorflow/tfjs-node": "^4.22.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express-validator": "^2.20.33",
    "@types/fs-extra": "^11.0.4",
    "@types/node-fetch": "^2.6.11",
    "@types/pg": "^8.15.5",
    "@types/socket.io": "^3.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "punycode": "^2.3.1",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
